<!DOCTYPE html>
<html>
  <head>
    <title>Rubiti</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
    <%= favicon_link_tag asset_pack_path('media/images/rubiti_240.webp') %>

    <%= stylesheet_pack_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="sidebar">
      <img src="<%= asset_pack_path 'media/images/rubiti_240.webp' %>" id="logo_menu" />
      <ul>
        <li><a href="#"><i class="icon fas fa-home"></i>Home</a></li>
        <li><%= link_to '<i class="icon fas fa-building"></i>Informações'.html_safe, informations_path %></li>
        <li><%= link_to '<i class="icon fas fa-at"></i>Emails'.html_safe, contacts_path %></li>
        <% if current_user.admin == true %>
          <li><%= link_to '<i class="icon fas fa-users"></i>Usuários'.html_safe, users_path %></li>
        <% end %>

      </ul>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>