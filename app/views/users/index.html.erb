<% if current_user %>
    Logged in as <%= current_user.email %>.
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Sign Up", signup_path %> or
    <%= link_to "Log In", login_path %>
<% end %>

<h2 class="h2">Lista de Usuários</h2>
 
<table class="table">
  <tr class="header">
    <th>ID</th>
    <th>NAME</th>
    <th>ADMIN</th>
    <th>EMAIL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.admin %></td>
      <td class="email"><%= user.email %></td>
      
      <td class="fix-buttons"><%= button_to 'Mostrar', user_path(user), method: 'get', class: 'button' %></td>
      
      <td class="fix-buttons"><%= button_to 'Editar', edit_user_path(user), method: 'get', class: 'button' %></td>
      
      <td class="fix-buttons"><%= button_to 'Apagar', user_path(user), method: :delete, data: { confirm: 'Tem certeza de que vai deletar esse usuário?' }, class: 'button' %></td>
      
    </tr>
    </tr>
  <% end %>
</table>
<br>
<td><%= link_to 'Cadastrar Novo Usuário', new_user_path, class: "regular-button" %></td>
