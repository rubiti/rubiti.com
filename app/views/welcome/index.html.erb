    <section class="top">
      <!-- Header -->
      <header id="header">
        <div class="inner">
          <a href="#" class="logo">
            <% @informations.each do |information| %>
              <strong><%= information.name %></strong>
              <%= information.short_description %>
            <% end %>
          </a>
          <input type="checkbox" id="openSidebarMenu">
          <label for="openSidebarMenu" class="sidebarIconToggle">
            <i class="fa fa-bars"></i>
          </label>
          
          <!-- Sidebar Menu -->
          <nav id="sidebarMenu">
            <ul class="sidebarMenuInner">
              <div class="sidebarMenuInner-icon">
                <input type="checkbox" id="openSidebarMenu">
                <label for="openSidebarMenu" class="sidebarIconToggle">
                  <i class="fa fa-times"></i>
                </label>
              </div>
              <a href="#">
                <img src="<%= asset_pack_path 'media/images/rubiti_240.webp' %>" id="logo_menu" />
              </a>
              <li><i class="icon fas fa-home"></i><a href="#">Home</a></li>
              <li><i class="icon fas fa-satellite"></i><a href="#wrapper">Tecnologias</a></li>
              <li><i class="icon far fa-comments"></i><a href="#contact">Contato</a></li>
              <li><i class="icon fas fa-address-card"></i><a href="#footer">Informações</a></li>
            </ul>
          </nav>
        </div>

        <!-- Topbar Menu -->
        <nav id="topNav">
          <ul>
            <li><a href="#footer">Informações</a></li>
            <li><a href="#wrapper">Tecnologias</a></li>
            <li><a href="#contact">Contato</a></li>
            <li><a href="#">Home</a></li>
          </ul>
        </nav>
      </header>
      
      <% @contents.each do |content| %>

      <div id="banner">
        <img src="<%= asset_pack_path 'media/images/rubiti_240.webp' %>" id="emblema" />
        <div>
          <div class="banner-row">
            <span class="icon fa fa-lightbulb"></span>
            <h3><%= content.banner_title_1 %></h3>
            <p><%= content.banner_content_1 %></p>
          </div>
          <div class="banner-row">
            <span class="icon fab fa-cloudversify"></span>
            <h3><%= content.banner_title_2 %></h3>
            <p><%= content.banner_content_2 %></p>
          </div>
          <div class="banner-row">
            <span class="icon fas fa-bullhorn"></span>
            <h3><%= content.banner_title_3 %></h3>
            <p><%= content.banner_content_3 %></p>
          </div>
        </div>
      </div>
    </section>
  
    <!-- Highlights -->
    <section class="wrapper" id="wrapper">
      <div class="inner">
        <header class="special">
          <h2><%= content.wrapper_title %></h2>
          <p><%= content.wrapper_description %></p>
        </header>
        <div class="highlights">
          <section class="high">
            <div class="content">
              <header>
                <span class="icon fab fa-digital-ocean"></span>
                <h3><%= content.highlight_title_1 %></h3>
              </header>
              <p><%= content.highlight_content_1 %></p>
            </div>
          </section>
          <section class="high">
            <div class="content">
              <header>
                <span class="icon fab fa-linux"></span>
                <h3><%= content.highlight_title_2 %></h3>
              </header>
              <p><%= content.highlight_content_2 %></p>
            </div>
          </section>
          <section class="high">
            <div class="content">
              <header>
                <span class="icon fas fa-credit-card"></span>
                <h3><%= content.highlight_title_3 %></h3>
              </header>
              <p><%= content.highlight_content_3 %></p>
            </div>
          </section>
          <section class="high">
            <div class="content">
              <header>
                <span class="icon fa fa-comments"></span>
                <h3><%= content.highlight_title_4 %></h3>
              </header>
              <p><%= content.highlight_content_4 %></p>
            </div>
          </section>
        </div>
      </div>
		</section>
		
		<!-- CTA -->
		<section id="cta" class="wrapper_cta">
			<div class="inner_cta">
				<h2>
					<%= content.cta_title %>
				</h2>
				<p>
					<%= content.cta_content %>
				</p>
			</div>
		</section>

    <!-- contact -->
    <section class="wrapper" id="contact">
      <header class="special">
        <h2><%= content.contact_title %></h2>
        <p><%= content.contact_content %></p>
      </header>

    <% end %>

      <div class="highlights">
        <section class="contact">
          
          <%= form_for(@contact) do |f| %>
            <% if @contact.errors.any? %>
              <div id="error_explanation">
                <h3><%= pluralize(@contact.errors.count, "error") %> Esse contato não pôde ser realizado:</h2>
                <ul>
                  <% @contact.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <%= f.label :name, 'Nome: ', class: 'contact-fields' %><br />
            <%= f.text_field :name, placeholder: 'Seu nome', class: 'contact-fields' %>
            
            <%= f.label :email, 'Email: ', class: 'contact-fields' %><br />
            <%= f.text_field :email, placeholder: 'Seu email', class: 'contact-fields' %>
            
            <%= f.label :message, 'Mensagem: ', class: 'contact-fields' %><br />
            <%= f.text_area :message, placeholder: 'Sua mensagem', class: 'contact-fields' %>
            
            <%= f.submit "Enviar Mensagem", class: 'button contact-fields' %>
          <% end %>

        </section>
      </div>
    </section>
    
    <!-- Footer -->
    <footer id="footer">
      <div class="inner">
        <div class="content">
          <% @informations.each do |information| %>
            <section class="resp-footer resp-footer-full">
              <h3>Porque trazer seu projeto para a rubiti?</h3>
              <p><%= information.description %></p>
            </section>
            <section class="resp-footer resp-footer-full">
              <h4>Entre em contato:</h4>
              <ul class="alt">
                <li><i class="icon fas fa-phone-square"></i><%= information.phone %></li>
                <li><i class="icon fas fa-at"></i><%= information.email %></li>
                <li><i class="icon fas fa-globe"></i><%= information.site %></li>
                <li><i class="icon fas fa-map-marker-alt"></i><%= information.location %></li>
              </ul>
            </section>
            <section class="resp-footer-full">
              <h4>Redes Sociais:</h4>
              <ul class="plain">
  							<li><a href="https://www.facebook.com/<%= information.facebook %>"><i class="icon fab fa-facebook">&nbsp;</i>Facebook</a></li>
  							<li><a href="https://www.linkedin.com/company/<%= information.linkedin %>"><i class="icon fab fa-linkedin">&nbsp;</i>Linkedin</a></li>
	  						<li><a href="https://github.com/<%= information.github %>"><i class="icon fab fa-github">&nbsp;</i>Github</a></li>
              </ul>
            </section>
          </div>
          <div class="copyright">
            &copy;<a href="<%= information.site %>"><%= information.copyright %></a> <%= information.copyright_short %>
          </div>
        <% end %>
      </div>
    </footer>